<%- include('../partials/header') %>

<div class="container col-lg-8">
  <div class="card">
    <h5 class="card-header">내 정보 수정하기</h5>
    <div class="card-body">
      <form action="/profile/<%= user._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="fname">성</label>
          <input
            type="text"
            name="firstName"
            id="fname"
            class="form-control"
            value="<%= user.firstName %>"
          />
        </div>
        <div class="form-group">
          <label for="lname">이름</label>
          <input
            type="text"
            name="lastName"
            id="lname"
            class="form-control"
            value="<%= user.lastName %>"
          />
        </div>
        <div class="form-group">
          <label for="bio">자기소개</label>
          <input
            type="text"
            name="bio"
            id="bio"
            class="form-control"
            value="<%= user.bio %>"
          />
        </div>
        <div class="form-group">
          <label for="hometown">거주지</label>
          <input
            type="text"
            name="hometown"
            id="hometown"
            class="form-control"
            value="<%= user.hometown %>"
          />
        </div>
        <div class="form-group">
          <label for="workspace">직장</label>
          <input
            type="text"
            name="workspace"
            id="workspace"
            class="form-control"
            value="<%= user.workspace %>"
          />
        </div>
        <div class="form-group">
          <label for="education">학력</label>
          <input
            type="text"
            name="education"
            id="education"
            class="form-control"
            value="<%= user.education %>"
          />
        </div>
        <div class="form-group">
          <label for="contact">연락처</label>
          <input
            type="text"
            name="contact"
            id="contact"
            class="form-control"
            value="<%= user.contact %>"
          />
        </div>
        <button type="submit" class="btn btn-primary mt-3">수정하기</button>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
